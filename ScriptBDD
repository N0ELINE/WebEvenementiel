CREATE TABLE MANAGEACCESS(
    id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
     url VARCHAR(50),
    droit INT,
    controleur  VARCHAR(50),
    fonction  VARCHAR(50),
    FOREIGN KEY (droit) REFERENCES DROITS(idDroits)
 );

